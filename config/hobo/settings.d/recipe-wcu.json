{
  "variables": {
    "hobo": "hobo-usagers.waco.localhost",
    "authentic": "usagers.waco.localhost",
    "combo": "combo-usagers.waco.localhost",
    "combo_agent": "backoffice-usagers.waco.localhost",
    "wallonie_connect": "usagers"
  },
  "steps": [
    {
      "create-hobo": {
        "url": "http://${hobo}/"
      }
    },
    {
      "create-superuser": {
        "email": "adminwaco@imio.be",
        "password": "admin"
      }
    },
    {
      "create-authentic": {
        "url": "http://${authentic}/",
        "title": "Local WCU - Authentic"
      }
    },
    { "set-idp": {} },
    {
      "create-combo": {
        "url": "http://${combo}/",
        "title": "Local WCU - Combo",
        "template_name": "portal-user"
      }
    },
    {
      "create-combo": {
        "url": "http://${combo_agent}/",
        "slug": "portal-agent",
        "title": "Local WCU - Combo backend",
        "template_name": "portal-agent"
      }
    },
    {
      "set-attribute": {
        "name": "niss",
        "label": "Numero national",
        "description": "Le num d'identification au Registre national se trouve sur la carte d'identite.",
        "kind": "nrn",
        "enabled": true
      }
    },
    {
      "set-theme": {
        "theme": "wallonieconnect"
      }
    }
  ]
}
